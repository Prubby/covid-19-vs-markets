{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": ["prettier", "svelte3"],
    "extends": ["eslint:recommended", "prettier"],
    "overrides": [
        {
            "files": ["src/**/*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "prettier/prettier": "error",
        "svelte3/lint-template": 2
    },
    "globals": {
        "process": true
    }
}
