{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": ["svelte3"],
    "extends": ["eslint:recommended"],
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "globals": {
        "process": true,
        "cy": true,
        "Cypress": true,
        "beforeEach": true,
        "before": true,
        "afterEach": true,
        "after": true,
        "context": true,
        "describe": true,
        "it": true,
        "expect"
    }
}
